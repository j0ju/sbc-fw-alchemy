# .screenrc

startup_message     off
autodetach          on
nethack             on
crlf                off
deflogin            off
hardcopy_append     on
startup_message     off
vbell               off
defscrollback       10000
silencewait         15

#backtick            1 60 60 $HOME/.screenrc.acpi-helper
#hardstatus          alwayslastline "%{w} %H (%l) | %d.%m %c | %w"
#hardstatus          alwayslastline "%w %-= | %H | %l | %d.%m. %c | %1`"
hardstatus          alwayslastline "%w %-= | %H | %l | %d.%m. %c"

sorendition         kW

activity            "activity in %n (%t) [%w:%s]~"
shelltitle          sh
defshell            -/bin/bash

bind ^s split
