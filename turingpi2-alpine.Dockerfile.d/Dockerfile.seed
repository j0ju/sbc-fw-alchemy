FROM sbc:armhf-Alpine-3.21 AS alpine
FROM sbc:turingpi2 AS turingpi2

FROM sbc:img-mangler
COPY --from=alpine /target/ /target
COPY --from=turingpi2 /target/lib/modules /target/lib/modules

CMD \
  rm -f /target/etc/resolv.conf ;\
  cp /etc/resolv.conf /target/etc/resolv.conf ;\
  exec env HOME=/root SHELL=/bin/bash chroot /target /bin/bash -l ;\
: # eo CMD
