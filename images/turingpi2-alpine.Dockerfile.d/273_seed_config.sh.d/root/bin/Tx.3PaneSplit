#!/bin/sh

# Layout: tmux display-message -p '#{window_layout}'
LAYOUT="ddfd,157x90,0,0[157x15,0,0,0,157x56,0,16,1,157x17,0,73,2]"

NODE="${1:-}"

tmux rename-window sh
case "$NODE" in
  [1234] ) tmux split-window -v minicom $NODE ;;
  ""     ) tmux split-window -v ;;
  *      ) tmux split-window -v "$@" ;;
esac
tmux split-window -v
tmux select-layout "$LAYOUT"
tmux rotate "$LAYOUT"
exec logread -F
