# - /etc/profile -
[ "$__ETC_PROFILE_READ" = yes ] && return 0
__ETC_PROFILE_READ=yes

export PATH="/bin:/sbin:/usr/bin:/usr/sbin"

case "$-" in
  *i* )
    if [ "`id -u`" -eq 0 ]; then
      export PS1='# '
    else
      export PS1='$ '
    fi
    ;;
esac

# Source configuration files from /etc/profile.d
for i in /etc/profile.d/*.sh ; do
  if [ -r "$i" ]; then
    . $i
  fi
done
unset i

# vim: ts=2 sw=2 et ft=sh
